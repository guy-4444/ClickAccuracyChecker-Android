<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity_Result"
    tools:showIn="@layout/activity_result">

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="180dp"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp"
        android:background="@color/skv_sway_background">

        <ImageView
            android:id="@+id/imageClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:alpha="1.0"
            android:scaleType="fitXY"
            android:src="@drawable/img_cross_9" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="180dp"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/frame1"
        android:background="@color/skv_sway_background">

        <ImageView
            android:id="@+id/imageTouch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:alpha="1.0"
            android:scaleType="fitXY"
            android:src="@drawable/img_cross_9" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/view"
        android:layout_width="180dp"
        android:layout_height="270dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark">

    </FrameLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:text="TextView"
        android:textColor="@android:color/black" />
</RelativeLayout>